/* components/bgMusic/index.wxss */
.bgmBtn{
    width: 60rpx;
    height: 60rpx;
    position: fixed;
    top: 20rpx;
    right: 20rpx;
    z-index: 999999;
}

.bgmBtn image{
    width: 100%;
    height: 100%;
}

.on{
    -webkit-animation: rotating 4s linear infinite;
}

@keyframes rotating{
    0% {-webkit-transform: rotate(0deg);}
    100% {-webkit-transform: rotate(360deg);}
}